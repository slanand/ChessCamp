<h3><%= status %> Families</h3>

<table class="table">
  <tr>
    <th width="120">Family Name</th>
    <th width="120">Parent First Name</th>
    <th width="120">Phone</th>
    <th width="120">Number of Students</th>
  </tr>

<% @active_families.each do |family| %>
  <tr>
    <td><%= link_to family.family_name, family_path(family) %></td>
    <td align="center"><%= family.parent_first_name %></td>
    <td align="center"><%= number_to_phone(family.phone) %></td>
    <td align="center"><%= family.students.size %></td>
    <td><%= link_to 'Edit', edit_family_path(family), class: "button tiny radius" %></td>
  </tr>
<% end %>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br>
<% if can? :create, Family %>
  <%= link_to "Add a new family", new_family_path, class: "button tiny radius" %> &nbsp;&nbsp;
<% end %>
<%= link_to_function "Back to homepage", home_path, :class => 'button tiny secondary radius' %>