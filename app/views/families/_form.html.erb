<%= simple_form_for(@family, html: { class: 'form-horizontal' }) do |family_form| %>
       
    <div class="row">
      <div class="small-6 columns">
        <fieldset>
        <legend><%= controller.action_name.capitalize %> Family </legend>
          <%= render :partial => "family_fields", :locals => { :f => family_form } %>
        </fieldset>
      </div>
    </div>

    <div class="form-actions">
      <%= family_form.submit nil, class: 'button small radius' %>
      <%= link_to 'Back to list of families', families_path, :class => 'button small secondary radius' %>
    </div>

<% end %>