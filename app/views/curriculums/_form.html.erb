<%= simple_form_for(@curriculum, html: { class: 'form-horizontal' }) do |f| %>
   
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Curriculum </legend>
    
    <%= f.input :name %>
    <%= f.input :description, input_html: { rows: 6 } %>
    <%= f.input :min_rating %>
    <%= f.input :max_rating %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, class: 'button small radius' %>
      <%= link_to 'Back to list of curriculums', curriculums_path, :class => 'button small secondary radius' %>
    </div>
  </fieldset>
  
<% end %>