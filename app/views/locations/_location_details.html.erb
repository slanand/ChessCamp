<h3>Location Details</h3><br />
<strong>Name:&nbsp;&nbsp;</strong> 
  <%= @location.name%><br /><br />

<strong>Address:&nbsp;&nbsp;</strong>
<p>
  <%= @location.street_1 %><br>
  <% if @location.street_2 != nil %>
      <%= @location.street_2 %><br>
  <% end %> 
  <%= @location.city %>, <%= @location.state %> <%= @location.zip %></td>
</p>

<strong>Maximum Capacity:&nbsp;&nbsp;</strong> 
 <%= @location.max_capacity %><br /><br />

	<strong>Active?&nbsp;&nbsp;</strong>
	  <%= @location.active ? "Yes" : "No" %><br /><br /> <br />

<% if can? :update, @location %>
	<%= link_to "Edit this location", edit_location_path(@location), class: "button tiny radius" %>&nbsp;&nbsp; <br> <br>
<% end %> 
<%= link_to "Back to list locations", locations_path, class: "button secondary tiny radius" %>&nbsp;&nbsp; <br> <br>