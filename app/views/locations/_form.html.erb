<%= simple_form_for(@location, html: { class: 'form-horizontal' }) do |f| %>
<div class = "row">
  <div class="6-large columns">
     <fieldset>
      <legend><%= controller.action_name.capitalize %> Location </legend>
        <%= f.input :street_1 %>
        <%= f.input :street_1 %>
        <%= f.input :city %>
        <%= f.input :state %>
        <%= f.input :zip %>
        <%= f.input :max_capacity %>
        <%= f.input :active %>
     </fieldset>
  </div>
</div>

<div class="form-actions">
  <%= f.submit nil, class: 'button small radius' %>
  <%= link_to 'Back to list of students', locations_path, :class => 'button small secondary radius' %>
</div>

<% end %>