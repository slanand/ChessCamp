<% unless @camps.empty? %>
  <!-- <h3>&nbsp;</h3> -->
  <div class="panel clearfix">
    <h5>Location Used On:</h5>
    <ul class="side-nav">
      <% @camps.each do |camp| %>
        <li><%= link_to "#{camp.start_date.strftime('%B %e, %Y')}", camp_path(camp) %></li>
      <% end %>
    </ul>
    <span class="paginate">
      <%= will_paginate @camps, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
    </span>
  </div>

<% else %>
  <div class="panel clearfix">
    <h5>Location has not been used</h5>
  </div>
<% end %>