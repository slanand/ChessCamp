<h3>Student Details</h3><br />
<strong>Name:&nbsp;&nbsp;</strong> 
  <%= @student.proper_name %><br /><br />

<strong>Date of Birth:&nbsp;&nbsp;</strong> 
  <%= @student.date_of_birth.strftime('%m/%d/%y') %> <br /><br />

<strong>Age:&nbsp;&nbsp;</strong> 
  <%= @student.age %><br /><br />

<strong>Rating:&nbsp;&nbsp;</strong>
  <%= @student.rating %><br /><br />

<strong>Family:&nbsp;&nbsp;</strong>
  <%= @student.family.family_name %><br /><br />

<strong>Active?&nbsp;&nbsp;</strong>
  <%= @student.active ? "Yes" : "No" %><br /><br /> <br />


<%= link_to "Edit this student", edit_student_path(@student), class: "button tiny radius" %>&nbsp;&nbsp;
<%= link_to 'Destroy student', student_path(@student), data: { confirm: 'Are you sure you want to permanently remove this student from the system?' }, method: :delete, class: "button tiny radius alert" %>